<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.olamide.javadevelopers.controllers.Activity_detail">


    <ImageView
        android:id="@+id/user_image_header"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:scaleType="fitXY"
        android:fitsSystemWindows="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Username"
        android:textSize="20sp"
        android:textColor="#299b3a"
        android:textAlignment="center"
        android:layout_below="@+id/user_image_header" />

    <TextView
        android:id="@+id/githubLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#299b3a"
        android:textAlignment="center"
        android:layout_marginTop="29dp"
        android:text="Github Profile Link" />
</RelativeLayout>
